---
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
import menu from "../assets/menu.png";
import closeMenu from "../assets/close-menu.png"; // You can use an image for the close button if needed
---

<nav
  class="bg-card flex justify-between items-center md:px-[80px] md:py-[20px] px-[16px] py-[20px] border-y-1 border-[#262626] w-full font-inter"
>
  <div class="flex gap-[8px] items-center">
    <Image src={logo} alt="logo w-[40px] md:w-[10px]" />
    <p class="text-title">Akera.ai</p>
  </div>
  <div class="hidden md:flex text-paragraph md:flex-row md:items-center md:gap-8 md:space-x-0 md:py-0" id="menu">
    <a href="/" class="px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">Home</a>
    <a href="/news" class="px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">News</a>
    <a href="/podcasts" class="px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">Podcasts</a>
    <a href="/resources" class="px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">Resources</a>
  </div>
  <button class="hidden md:flex px-[14px] py-[10px] bg-primary rounded-md">Contact Us</button>
  <button class="md:hidden text-background" id="menu-button">
    <Image src={menu} alt="menu" class="w-[34px]" />
  </button>
</nav>

<div class="hidden flex-col items-center bg-card w-full md:hidden text-paragraph space-y-2 p-4 " id="mobile-menu">
  <a href="/" class="block w-full text-center px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">Home</a>
  <a href="/news" class="block w-full text-center px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">News</a>
  <a href="/podcasts" class="block w-full text-center px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">Podcasts</a>
  <a href="/resources" class="block w-full text-center px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">Resources</a>
  <a href="/contact" class="block w-full text-center px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md">Contact Us</a>
  <button class="block w-full text-center px-[24px] py-[14px] border-0 hover:border-1 hover:border-border hover:bg-background rounded-md" id="close-menu-button">Close</button>
</div>

<!-- Mobile Menu Script -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeMenuButton = document.getElementById('close-menu-button');

    // Toggle mobile menu visibility
    menuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Close mobile menu
    closeMenuButton.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  });
</script>
