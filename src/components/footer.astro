---
import { Image } from "astro:assets";
import twitter from "../assets/twitter.svg";
import medium from "../assets/medium.svg";
import linkedin from "../assets/linkedin.svg";

import { FOOTER_DATA } from "../constants/footer-data";
---

<div class="flex flex-col px-[16px] md:w-full">
  <div class="flex flex-wrap md:flex-row  md:justify-center gap-[40px] md:gap-[80px]  py-[20px] md:py-[80px] border-b border-border font-inter">
    {FOOTER_DATA.map((section) => (
      <div class="flex flex-col gap-[16px] md:gap-[36px] text-lg">
        <h1 class="text-title">{section.title}</h1>
        <div class="flex flex-col gap-[18px] text-secondary">
          {section.title === "Resources"
            ? section.links.map((link) => (
                <button class="flex items-center py-[8px] px-[14px] md:py-[10px] md:px-[16px] gap-[4px] md:gap-[10px] border border-border rounded-md md:rounded-lg hover:bg-card mr-auto">
                  {link.name}
                  <Image src={link.icon} alt="vector" />
                </button>
              ))
            : section.links.map((link) => 
            <p class="cursor-pointer hover:text-title transition">{link}</p>)}
        </div>
      </div>
    ))}
  </div>

  <div class="flex flex-col justify-center md:flex-row md:justify-between items-center py-[24px] gap-[20px] text-secondary font-inter">
    <div class="flex gap-[4px]">
      <p>Terms & Conditions</p>
      <span class="text-border">|</span>
      <p>Privacy Policy</p>
    </div>
    <div class="flex gap-[14px]">
      <Image src={twitter} alt="twitter" class="cursor-pointer" />
      <Image src={medium} alt="medium" class="cursor-pointer" />
      <Image src={linkedin} alt="linkedin" class="cursor-pointer" />
    </div>
    <p>Â© 2024 Akera AI. All rights reserved.</p>
  </div>
</div>

