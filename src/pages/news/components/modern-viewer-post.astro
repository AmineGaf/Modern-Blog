---
import { Image } from 'astro:assets';

const { row } = Astro.props;
---

{
  row && (
    <div class="flex flex-col md:flex-row gap-[30px] md:gap-[80px] border-b border-border">
      {row.map((column, index) => (
        <div
          class={`flex flex-col py-[20px] md:py-[80px] gap-[20px] md:gap-[30px] 
          ${index !== row.length - 1 ? 'border-b md:border-r md:border-b-0 border-border md:pr-16' : ''}
          `}
        >
          <Image src={column.img} alt={column.title} />
          <h1 class="text-title">{column.title}</h1>
          <p class="text-desc max-w-[500px]">{column.description}</p>
        </div>
      ))}
    </div>
  )
}
