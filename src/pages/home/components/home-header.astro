---
import { Image } from "astro:assets";

import background from "../../../assets/background.svg";
import avatars from "../../../assets/avatars.svg";
import vector2 from "../../../assets/vector2.svg";

import {FEATURES, STATISTICS} from "../../../constants/home-header";


import Feature from "./home-header-feature.astro";
import Statistic from "./home-header-statistic.astro"
---


<div class="flex flex-col" >
  <div class="flex flex-col md:flex-row border-b border-border lg:pr-[162px]">
    <div class="flex flex-col pt-[40px] gap-[40px] md:pt-[100px] lg:pt-[150px] md:gap-[100px]">
      <div class="flex flex-col px-[16px] gap-[14px] md:gap-[30px] lg:px-[50px] justify-start">
        <p class="text-secondary text-xl lg:text-2xl font-kumbh-sans">Your Journey to Tomorrow Begins Here</p>
        <h1 class="text-title text-4xl md:text-6xl max-w-[800px] font-kumbh-sans">Explore the Frontiers of Artificial Intelligence</h1>
        <p class="text-paragraph lg:text-lg font-inter max-w-[800px] lg:max-w-[1200px] ">
          Welcome to the epicenter of AI innovation. FutureTech AI News is 
          your passport to a world where machines think, learn, and reshape 
          the future. Join us on this visionary expedition into the heart of AI.
        </p>
      </div>
      <ul class="flex border-t border-border">
        {STATISTICS.map((stat, index) => (
          <Statistic stat={stat} index={index} />
        ))}
      </ul>
      
    </div>
    <div class="relative overflow-hidden border-l border-border font-inter">
      <div class="absolute w-[423px] h-[367px] md:w-[750px] md:h-[607px] lg:w-[900px] lg:h-[850px] opacity-40 z-10">
        <Image src={background} alt="background" class="w-full h-full object-cover" />
      </div>
      <div class="flex flex-col px-[40px] pb-[40px] gap-[20px] z-50 relative md:gap-12 lg:pl-[80px] ">
        <div class="pt-[150px] md:pt-[300px] lg:pt-[500px]">
          <Image src={avatars} alt="avatars" class="md:w-[218px] lg:w-[250px]" />
        </div>
        <div class="gap-[4px]">
          <h1 class="text-xl text-title">Explore 1000+ resources</h1>
          <p class="text-desc">Over 1,000 articles on emerging tech trends and breakthroughs.</p>
        </div>
        <button class="py-[14px] px-[20px] lg:py-[18px] lg:px-[24px] text-desc border rounded-md border-border flex justify-center items-center gap-[4px] mr-auto hover:bg-card">Explore Resources <Image src={vector2} alt="vector2" class="w-[13.75px]" /></button>
      </div>
    </div>
  </div>
  <ul class="flex flex-col md:flex-row">
    {FEATURES.map((feature, index) => (
      <Feature index={index} feature={feature}/>
    ))}
  </ul>
</div>
